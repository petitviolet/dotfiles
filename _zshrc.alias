# select file from `tree` and open it with vim
function tree_select() {
  tree -N -a --charset=o -f -I '.DS_Store|undodir|.git|.cache|.idea|resolution-cache|target/streams|node_modules|.db/data' | \
    fzf --preview 'f() {
      set -- $(echo -- "$@" | grep -o "\./.*$");
      if [ -d $1 ]; then
        ls -lFG --color=always $1
      else
        cat $1 | highlight -O ansi --syntax "$(echo ${1##*.})" || cat $1
      fi
    }; f {}' | \
      sed -e "s/ ->.*\$//g" | \
      tr -d '\||`| ' | \
      tr '\n' ' ' | \
      sed -e "s/--//g" | \
      xargs echo
}

