export FZF_DEFAULT_OPTS="--no-sort --exact --cycle --multi --ansi --reverse --border
  --color hl:#ee3333,hl+:#ee1111
  --bind=ctrl-t:toggle --bind=ctrl-k:kill-line --bind=?:toggle-preview --bind=down:preview-down --bind=up:preview-up
